<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent"></solid>
        </shape>
    </item>
    <!-- Body -->
    <item android:left="-10dp"
        android:top="-10dp"
        android:right="-10dp">
        <shape>
            <solid android:color="@android:color/transparent"></solid>
            <stroke
                android:width="2dp"
                android:color="#E4E0D5" />
        </shape>
    </item>
</layer-list>