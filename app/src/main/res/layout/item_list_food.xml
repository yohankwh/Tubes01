<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_list_food_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/box_item_height"
    android:orientation="horizontal"
    android:layout_weight="3">

        <ImageButton
            android:id="@+id/img_btn_trash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ib_padding_top"
            android:background="@android:drawable/ic_menu_delete">

        </ImageButton>
        <TextView
            android:id="@+id/textViewFood"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/default_fontsize"
            android:text="Menu A"
            android:layout_weight="2"/>



</LinearLayout>